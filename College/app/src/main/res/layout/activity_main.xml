<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.root.college.MainActivity"
    android:id="@+id/relativelayout">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Enter the name of the candidate" />
    <TextView
        android:id="@+id/labelSpinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Year"
        android:gravity="center"
        android:layout_above="@+id/spinner2"
        android:textSize="30sp"
        android:layout_alignTop="@+id/spinner1" />
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:spinnerMode="dialog"
        android:layout_toRightOf="@+id/labelSpinner1"
        android:layout_toEndOf="@+id/labelSpinner1"
        android:paddingLeft="85dp"
        />
    <TextView
        android:id="@+id/labelSpinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Branch"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_above="@+id/spinner3"
        android:layout_below="@+id/labelSpinner1" />

    <Spinner
        android:layout_below="@id/spinner1"
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:layout_toRightOf="@+id/labelSpinner2"
        android:layout_toEndOf="@+id/labelSpinner2"
        android:paddingLeft="60dp"
        />
    <TextView
        android:id="@+id/labelSpinner3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Position"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/spinner3"
        android:layout_alignTop="@+id/spinner3" />

    <Spinner
        android:layout_below="@id/spinner2"
        android:id="@+id/spinner3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:layout_toRightOf="@+id/labelSpinner3"
        android:gravity="right"
        android:paddingLeft="45dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/add"
        android:layout_below="@+id/labelSpinner3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEE ALL ENTERIES"
        android:id="@+id/buttonseeAllEntries"
        android:layout_below="@+id/add"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
